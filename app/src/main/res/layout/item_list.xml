<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".MainActivity"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/list_item"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:id="@+id/photo_listitem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@id/name_listitem"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:adjustViewBounds="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/name_listitem"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="24dp"
        android:padding="5dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#202020"

        android:textSize="24sp"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeTextType="uniform"
        app:fontFamily="@font/bmjuattf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toRightOf="@id/photo_listitem"
        app:layout_constraintRight_toLeftOf="@id/phNumber_listitem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/phNumber_listitem"
        android:layout_width="159dp"
        android:layout_height="43dp"
        android:layout_margin="10dp"
        android:autoLink="all"
        android:linksClickable="true"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="#202020"
        android:textColorLink="#707070"
        android:textSize="24sp"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeTextType="uniform"
        app:fontFamily="@font/bmjuattf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toRightOf="@id/name_listitem"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>